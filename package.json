{
    "name": "assignment-3",
    "version": "1.0.0",
    "description": "WCAG 2.0 Level 'A'-compliant template for Professional Certificate in Web Accessibility Assignment 3",
    "main": "index.html",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "scss": "node-sass --output-style compressed -o dist/css src/scss",
        "serve": "browser-sync start -b --server --files 'dist/css/*.css, **/*.html'",
        "watch:css": "onchange 'src/scss' -- npm run scss",
        "start": "run-p serve watch:css"
    },
    "author": "David R McKinnon",
    "license": "UNLICENCED",
    "devDependencies": {
        "browser-sync": "^2.26.7",
        "node-sass": "^4.13.1",
        "npm-run-all": "^4.1.5",
        "onchange": "^6.1.0"
    }
}
